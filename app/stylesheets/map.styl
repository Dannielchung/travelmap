body
  margin: 0
  background: #000

h1, h2
  clear: both
  font-family: Cardo, san-serif
  text-align: center

h1
  color: #bbb
  margin-top: 20px
  font-size: 72pt
  margin-bottom: 5px

h2
  color: #aaa
  font-size: 48pt
  margin-top: 0px
  margin-bottom: 10px

svg
  display: block
  margin: 0 auto 50px auto
  .boundary
    fill: none
    stroke: #000
    stroke-width: 0.5px

.toggles
  position: fixed
  top: 0
  left: 0
  padding-left: 10px

  ul
    list-style: none
    margin-left: 0
    padding-left: 0

  a
    color: #666

  span
    color: #444

.container
  margin: 0 auto
